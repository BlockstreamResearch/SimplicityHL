{
  "name": "simplicityhl",
  "displayName": "SimplicityHL Language Support",
  "description": "Syntax highlighting and autocompletion for SimplicityHL (Simfony) language",
  "version": "0.1.1",
  "publisher": "Simplicity",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlockstreamResearch/SimplicityHL"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
		"onLanguage:simfony"
	],
	"main": "dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "simfony",
        "aliases": [
          "Simfony",
          "simfony",
          "SimplicityHL",
          "simplicityhl"
        ],
        "extensions": [
          ".simf"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "simfony-witness",
        "aliases": [
          "Simfony witness",
          "simfony witness",
          "SimplicityHL witness",
          "simplicityhl witness"
        ],
        "extensions": [
          ".wit",
          ".json"
        ],
        "configuration": "./witness-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "simfony",
        "scopeName": "source.simfony",
        "path": "./syntaxes/simfony.tmLanguage.json"
      },
      {
        "language": "wit",
        "scopeName": "source.wit",
        "path": "./syntaxes/witness.tmLanguage.json"
      }
    ]
  },
  "license": "MIT",
  "scripts": {
    "compile": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run compile",
    "login": "vsce login Simplicity",
    "package": "vsce package",
    "publish": "vsce publish"
	},
  "icon": "icon.png",
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22",
		"@vscode/vsce": "^3.2.1",
		"esbuild": "^0.25.9",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"ts-loader": "^9.5.4",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"dependencies": {
		"@types/vscode": "^1.66.0",
		"@vscode/test-electron": "^2.3.9",
		"vscode-languageclient": "^9.0.1",
    "@vscode/vsce": "^3.6.0"
  }
}
